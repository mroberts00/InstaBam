<p id="notice"><%= notice %></p>

<div class='post'>
  <div class='header'>
    <span>
      Avatar
    </span>
    <span class='username'>
      <%= @user.username %> 
    </span>
    <span>
      Follow
    </span>
  </div>
  <div class='body'>
    <%= image_path 'valleytopeak.jpg' %>
    <%= image_tag 'valleytopeak.jpg' %>
    Image
  </div>
  <div>
    <span><%= @post.likes.size %> likes</span>
    <span><%= @post.likers.to_a.uniq  %> likers</span>
    <span>Comment</span>
    <span>Bookmark</span>
  </div>
  <div class='description'>
    <%= @post.description %>
  </div>
  <div class='comments'>
    Comments
  </div>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


